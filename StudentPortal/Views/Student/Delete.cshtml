@model StudentPortal.Models.Entities.Student

@{
    ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>

<div class="alert alert-warning">
    <p>Are you sure you want to delete this student?</p>
</div>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Phone</dt>
    <dd class="col-sm-10">@Model.Phone</dd>

    <dt class="col-sm-2">Subscribed</dt>
    <dd class="col-sm-10">@Model.Subscribed</dd>
</dl>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
